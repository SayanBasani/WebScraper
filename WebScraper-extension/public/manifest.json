{
  "manifest_version": 3,
  "name": "Text Selection Popup",
  "version": "1.0",
  "description": "Shows a Google Translate-style popup when text is selected.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Selection Popup"
  }
}
